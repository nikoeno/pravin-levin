---
import Card from "../components/Card.astro";
import Logo from "../components/Logo.astro";
import SocialLink from "../components/SocialLink.astro";
import Layout from "../layouts/Layout.astro";
import {
  secondarySocials,
  primarySocials,
  title,
  subtitle,
} from "../constants";
import "../preflight.css";
---

<Layout>
  <main class="main">
    <div class="container">
      <Card class="hero">
        <div class="hero-container">
          <Logo class="logo" />
          <div class="hero-content">
            <h1 class="title">{title}</h1>
            <p class="subtitle">{subtitle}</p>
            <div class="primary-social-links desktop">
              {
                primarySocials.map((social) => (
                  <SocialLink
                    href={social.url}
                    social={social.type}
                    class="primary-social"
                  >
                    {social.name}
                  </SocialLink>
                ))
              }
            </div>
          </div>
        </div>
        <div class="primary-social-links mobile">
          {
            primarySocials.map((social) => (
              <SocialLink
                href={social.url}
                social={social.type}
                class="primary-social"
              >
                {social.name}
              </SocialLink>
            ))
          }
        </div>
      </Card>
      <div class="socials-container">
        {
          secondarySocials.map((social) => (
            <SocialLink
              href={social.url}
              social={social.type}
              class="secondary-social"
            >
              {social.name}
            </SocialLink>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
<style>
  .main {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    justify-content: center;
    padding: 1rem;
    margin: 0 auto;
    width: 100%;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    max-width: 900px;
    width: 100%;
  }

  .title {
    display: flex;
    width: 100%;
    color: rgba(255, 255, 255, 0.9);
    font-size: 2rem;
    line-height: 1;
    font-weight: 600;
    margin: 0;
    text-align: left;
  }

  .subtitle {
    font-size: 1.125rem;
    font-weight: 400;
  }

  .socials-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero {
    color: white;
    padding: 28px 96px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin: 110px 0;
  }

  .hero-container {
    display: flex;
    /*flex-direction: column;*/
    justify-content: flex-start;
    gap: 2rem;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-socials {
    margin-left: -0.75rem;
    margin-bottom: 0.25rem;
    margin-top: 0.25rem;
  }

  .footer-socials {
  }

  .footer {
    padding: 2.5rem;
    margin: 0 auto;
  }

  .logo {
    flex-shrink: 0;
  }

  .primary-social :global(.social-card) {
    backdrop-filter: unset;
    padding: 0.75rem;
    padding-left: 3.5rem;
    font-size: 0.875rem;
    text-align: left;
  }

  .primary-social :global(.social-icon) {
    width: 1.5rem;
    height: 1.5rem;
  }

  .primary-social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .desktop {
    display: flex;
  }

  .mobile {
    display: none;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1rem;
      gap: 1rem;
      /* flex-direction: column; */
      justify-content: flex-start;
      align-items: start;
      margin: 0;
    }

    .logo {
      width: 100px;
      height: 100px;
      /*width: 75px;
      height: 75px;*/
    }

    .subtitle {
      font-size: 1rem;
      opacity: 0.9;
    }

    .desktop {
      display: none;
    }

    .mobile {
      display: flex;
    }
    .hero-container {
      gap: 1rem;
    }

    .secondary-social :global(.social-card) {
      padding: 1rem;
      padding-left: 3.25rem;
    }

    .secondary-social :global(.social-icon) {
      width: 1.5rem;
      height: 1.5rem;
    }

    .secondary-social :global(.social-icon-container) {
      left: 1rem;
    }
  }
</style>
