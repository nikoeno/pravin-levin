---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  social: keyof typeof socialIcons;
}

const { href, social } = Astro.props;

const socialIcons = {
  apple: "/assets/socials_icons/dark/apple.svg",
  bluesky: "/assets/socials_icons/dark/bluesky.svg",
  discord: "/assets/socials_icons/dark/discord.svg",
  dribble: "/assets/socials_icons/dark/dribble.svg",
  facebook: "/assets/socials_icons/dark/facebook.svg",
  figma: "/assets/socials_icons/dark/figma.svg",
  github: "/assets/socials_icons/dark/github.svg",
  google: "/assets/socials_icons/dark/google.svg",
  instagram: "/assets/socials_icons/dark/instagram.svg",
  linkedin: "/assets/socials_icons/dark/linkedin.svg",
  medium: "/assets/socials_icons/dark/medium.svg",
  messenger: "/assets/socials_icons/dark/messenger.svg",
  pinterest: "/assets/socials_icons/dark/pinterest.svg",
  reddit: "/assets/socials_icons/dark/reddit.svg",
  signal: "/assets/socials_icons/dark/signal.svg",
  snapchat: "/assets/socials_icons/dark/snapchat.svg",
  spotify: "/assets/socials_icons/dark/spotify.svg",
  telegram: "/assets/socials_icons/dark/telegram.svg",
  threads: "/assets/socials_icons/dark/threads.svg",
  tiktok: "/assets/socials_icons/dark/tiktok.svg",
  tumblr: "/assets/socials_icons/dark/tumblr.svg",
  twitch: "/assets/socials_icons/dark/twitch.svg",
  twitter: "/assets/socials_icons/dark/twitter.svg",
  vk: "/assets/socials_icons/dark/vk.svg",
  whatsapp: "/assets/socials_icons/dark/whatsapp.svg",
  youtube: "/assets/socials_icons/dark/youtube.svg",
  "": "/assets/socials_icons/dark/google.svg",
} as const;

const iconUrl = socialIcons[social];
---

<a href={href} class="social" target="_blank" rel="noopener noreferrer">
  <div class="social-icon-container">
    {iconUrl && <img src={iconUrl} alt="" class="social-icon" />}
  </div>
  <slot />
</a>

<style>
  .social {
    box-sizing: content-box;
    position: relative;
    display: flex;
    flex-basis: 45%;
    justify-content: start;
    text-align: left;
    align-items: center;
    border: 2px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(0, 0, 0, 0.6);
    transition:
      background-color 0.2s ease-in-out,
      transform 0.2s ease-in-out;
    color: white;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 1px;
    padding: .5rem 1.5rem;
    padding-left: 3.5rem;
    backdrop-filter: blur(var(--background-blur-primary));
    border-radius: 1rem;
    text-shadow:
      0px 0px 4px oklch(0 0 0),
      0px 0px 8px oklch(0 0 0);
    box-shadow: 0px 0px 32px -13px oklch(28.2% 0.091 267.935);
    flex-grow: 1;
    min-height: 3em;
    line-height: 1;
    /* height: ; */
    /* height: fit-content; */
  }

  .social:last-child {
    grid-column: span auto-fill;
  }

  .social:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transition:
      background-color 0.2s ease-in-out,
      transform 0.2s ease-in-out;
    transform: scale(1.005);
  }

  .social-icon-container {
    position: absolute;
    top: 50%;
    left: 1.5rem;
    transform: translateY(-50%);
  }

  .social-icon {
    width: 20px;
    height: 20px;
  }

  .social-icon-container::before {
    content: "";
    z-index: -1;
    display: block;
    width: 0px;
    height: 0px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 48px 12px oklch(28.2% 0.091 267.935);
  }
</style>
